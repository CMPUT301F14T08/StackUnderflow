<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs.ualberta.CMPUT301F14T08.stackunderflow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" /> 
	
    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Stackoverflow" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_stack_underflow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:label="@string/question_title" 
            android:theme="@style/BlackTheme">
        </activity>
        <activity
            android:name=".AnswerActivity"
            android:label="@string/answer_title" 
            android:theme="@style/BlueTheme">
        </activity>
        <activity 
            android:name=".NewQuestionActivity"
            android:label="@string/new_question_title">
        </activity>
        
        <activity 
            android:name=".NewAnswerActivity"
            android:label="@string/new_question_title"
            android:theme="@style/BlueTheme">
            
        </activity>
        
    </application>

</manifest>